generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  state     PlayerState?
  upgrades  Upgrade[]
}

model PlayerState {
  userId                 String   @id
  coins                  Int      @default(0)
  lastActivityAt         DateTime @default(now())
  lastClickAt            DateTime?
  lastAutoMinerCollectAt DateTime @default(now())
  updatedAt              DateTime @updatedAt
  user                   User     @relation(fields: [userId], references: [id])
}

model Upgrade {
  userId String
  type   String
  level  Int      @default(0)
  user   User     @relation(fields: [userId], references: [id])

  @@id([userId, type])
}